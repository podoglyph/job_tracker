<h1>Categories</h1>
<h3><%= link_to "Create a New Category", new_category_path %></h3>
<ul>
  <% @categories.each do |category| %>
    <%= link_to category.title, category_path(category) %><br>
    <%= link_to "Edit", edit_category_path(category) %>
    <%= link_to "Delete", category_path(category), method: "delete" %><br>
    <% end %>
</ul>
